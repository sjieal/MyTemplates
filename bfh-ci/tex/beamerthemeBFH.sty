\ProvidesPackage{beamerthemeBFH}[2023/10/20 v2.2.0 BFH-CI beamer theme, CI of Bern University of Applied Sciences]
% ====================
% Dependencies
% ====================
\mode<presentation>

\DeclareOptionBeamer{logofile}{
	\PassOptionsToPackage{logofile=#1}{beamerinnerthemeBFH}
}

\DeclareOptionBeamer{authorontitle}{
	\PassOptionsToPackage{authorontitle=#1}{beamerinnerthemeBFH}
}

\ProcessOptionsBeamer

\usefonttheme{BFH}
\usecolortheme{BFH}

% ====================
% Elements
% ====================

\setbeamertemplate{section in toc}{{\normalsize\color{BFH-Orange}$\blacktriangleright$}~\inserttocsection}
\setbeamertemplate{itemize items}{{\footnotesize\color{BFH-Orange}$\blacktriangleright$}~}
\setbeamertemplate{bibliography item}[text]

% Navigation
\beamertemplatenavigationsymbolsempty

% ====================
% Components
% ====================

\usetheme{BFH}
\useinnertheme{BFH}
\useoutertheme{BFH}

\newcommand*{\version}[1]{\gdef\insertversion{\versionformat{#1}}}
\newcommand*{\versionformat}[1]{v#1}
\def\insertversion{}

\mode<all>

\endinput
