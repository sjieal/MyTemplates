\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bfhfonts}[2023/10/20 v2.2.0 BFH-CI (fonts Module)]

\RequirePackage{iftex}
\RequirePackage{anyfontsize}
\RequirePackage{amssymb}

\ifPDFTeX
	\RequirePackage{nunito}
	\let\sfdefault\rmdefault
	\RequirePackage{sourceserifpro}
	\RequirePackage[T1]{fontenc}
	\PackageWarning{bfhfonts.sty}{You are using pdfLaTeX. In case the official fonts have been installed on your system I can't use them.}
\else
	\RequirePackage{fontspec}
	\IfFontExistsTF{UnitSlabPro}{
		\setmainfont{UnitSlabPro}[
			BoldFont=*-Bold,
			ItalicFont=*-Italic,
		]
	}{
		\RequirePackage{sourceserifpro}
	}
	\IfFontExistsTF{UnitRoundedPro}{
		\setsansfont{UnitRoundedPro}[
			UprightFont =*-Light,
			ItalicFont = *-LightItalic,
			BoldFont=*,
		]
	}{
		\setsansfont{Nunito}[
			UprightFont = *-Light,
			ItalicFont  = *-LightItalic,
			BoldFont    = *-Regular,
			BoldItalicFont = *-Italic,
		]
	}
	\newcommand*{\ltseries}{\fontseries{l}\selectfont}
\fi

\endinput